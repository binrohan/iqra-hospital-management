
@{
    ViewBag.Title = "Pharmacy Item Receive | " + LazzPharma.Web.Service.AppService.Name;
}
@section MenuItems {
    @Html.Partial("~/Views/Menu/Admin.cshtml")
}
<script type="text/javascript">
    var addScriptUrl = '/Content/IqraPharmacy/Pharmacy/Content/Item/AddReceived.js';
    //$('.purchase_group').addClass('active menu-open');
