
@{
    ViewData["Title"] = "AdmissionFormPrintable";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        /* Printable Setup */
        html, body {
            margin: 0;
            font-family: "Roboto", -apple-system, "San Francisco", "Segoe UI", "Helvetica Neue", sans-serif;
            font-size: 12pt;
            background-color: #eee;
        }

        * {
            box-sizing: border-box;
            -moz-box-sizing: border-box;
        }

        .page {
            margin: 1cm auto;
            background: #fff;
            box-shadow: 0 4px 5px rgba(75, 75, 75, 0.2);
            outline: 0;
        }

        div.page-break {
            page-break-after: always;
        }

        @@media screen {
            div.page-break::before {
                content: "";
                display: block;
                height: 0.8cm;
                margin-left: 0.5cm;
                margin-right: 0.5cm;
                background-color: #fff;
                box-shadow: 0 6px 5px rgba(75, 75, 75, 0.2);
            }

            div.page-break {
                display: block;
                height: 1.8cm;
                margin-left: -2.5cm;
                margin-right: -2.5cm;
                margin-top: 1.2cm;
                margin-bottom: 2cm;
                background: #eee;
            }
        }

        .page {
            width: 21cm;
            min-height: 29.7cm;
            padding: 1cm;
        }

        @@page {
            size: A4 portrait;
            margin-left: 2cm;
            margin-top: 2cm;
            margin-right: 2cm;
            margin-bottom: 2cm;
        }

        h1 {
            page-break-before: always;
        }

        h1, h2, h3, h4, h5, h6 {
            page-break-after: avoid;
        }

        p {
            margin: 0;
        }

        p + p {
            margin-top: 0.5cm;
        }

        a {
            text-decoration: none;
            color: black;
        }

        table {
            page-break-inside: avoid;
        }

        @@page {
            orphans: 4;
            widows: 2;
        }

        @@media print {
            html, body {
                background-color: #fff;
            }
            
            .page {
                width: initial !important;
                min-height: initial !important;
                margin: 0 !important;
                padding: 0 !important;
                border: initial !important;
                border-radius: initial !important;
                box-shadow: initial !important;
                page-break-after: always;
            }
            p{
                margin: initial !important;
            }
        }

        .v-bottom {
            display: flex;
            align-items: end;
        }

        .h-middle {
            display: flex;
            justify-content: center;
        }

        .title-main {
            text-align: center;
            font-weight: bolder;
            color: navy;
            font-size: 2.2rem;
            margin: 0;
        }

        .title-secondary {
            font-weight: bold;
            color: white;
            text-align: center;
            background: deepskyblue;
            border-radius: 4px;
            width: max-content;
            padding: 0 24px 2px 24px;
            font-size: 24px;
            margin: 0;
        }

        .title-page {
            text-transform: uppercase;
            font-weight: 600;
            width: max-content;
            background: navy;
            color: white;
            padding: 0px 10px 2px 10px;
            margin: 10px 0 30px 0;
            font-size: 20px;
        }

        .address p {
            padding: 0;
            margin: 0;
            text-align: center;
            color: navy;
            font-weight: bold;
        }

        p {
            color: navy;
        }

        .grid {
            display: grid;
            column-gap: 20px;
        }

        .grid--h-right {
            justify-content: end;
        }

        .grid--2 {
            grid-template-columns: auto auto;
        }

        .grid--3 {
            grid-template-columns: auto auto auto;
        }

        .grid--2-1 {
            grid-template-columns: 11fr 9fr;
        }

        .grid--auto-1fr {
            grid-template-columns: auto 1fr;
        }

        .grid--60-40 {
            grid-template-columns: 3fr 2fr;
        }

        .grid--2x1fr {
            grid-template-columns: repeat(2, 1fr);
        }

        .grid--space-between {
            justify-content: space-between;
            grid-template-columns: auto auto;
        }

        .w250f {
            width: 200px;
        }

        .form-field {
            display: grid;
            column-gap: 5px;
            grid-template-columns: auto 1fr;
        }

        .form-field p:nth-child(2), .blank {
            border-bottom: 1px dashed navy;
            margin: 0;
            padding-left: 5px;
        }

        .blank {
            height: 20px;
        }

        .signature {
            padding-top: 40px;
            width: 250px
        }

        .signature p {
            margin: 0;
        }

        div.grid--60-40:nth-child(1),
        form > div{
            margin-bottom: 16px;
        }
    </style>

</head>
<body>
    <div class="page">  
        <section>
            <div class="title-main">Dhanmondi Clinic (Pvt.) Ltd.</div>
            <div class="h-middle">
                <h1 class="title-secondary">ICU & HDU</h1>
            </div>
            <div class="address">
                <p>61, Green Road, Dhanmondi, Dhaka-1205</p>
                <p>Cell: 01857 176177, 01857 823833</p>
                <p>e-mail: dclicuhdu@gmail.com</p>
            </div>
            <div class="h-middle">
                <h2 class="title-page">Admission Form</h2>
            </div>
        </section>
        <section class="section--form container">
            <form>
                <div class="grid grid--h-right">
                    <div class="form-field w250f">
                        <p class="float-right">Date: </p><p class="auto_bind" data-binding="Date">05.10.2021</p>
                    </div>
                </div>
                <div class="grid grid--2">
                    <div class="form-field w70">
                        <p>Registration No: </p><p class="auto_bind"  data-binding="RegistrationNumber">211005A073601861</p>
                    </div>
                    <div class="form-field w30">
                        <p for="bed">Bed: </p><p class="auto_bind" data-binding="Bed">CR0836</p>
                    </div>
                </div>
                <div>
                    <div class="form-field">
                        <p>Patient Name: </p> <p class="auto_bind" data-binding="PatientName">Jhon Hugo Strange</p>
                    </div>
                </div>
                <div>
                    <div class="form-field">
                        <p>Father's / Husband's Name: </p><p class="auto_bind" data-binding="FatherOrHusbandName">Unknown Person</p>
                    </div>
                </div>
                <div>
                    <div class="form-field">
                        <p>Mothers's Name: </p> <p class="auto_bind" data-binding="MotherName">Unknown Persona</p>
                    </div>
                </div>
                <div class="grid grid--3">
                    <div class="form-field">
                        <p>Age: </p><p class="auto_bind" data-binding="Age">56</p>
                    </div>
                    <div class="form-field">
                        <p>Gender: </p><p class="auto_bind" data-binding="Gender">Male</p>
                    </div>
                    <div class="form-field">
                        <p>Profession: </p><p class="auto_bind" data-binding="Profession">Driver</p>
                    </div>
                </div>
                <div>
                    <div class="form-field ">
                        <p>Present Address: </p><p class="auto_bind" data-binding="PresentAddress">Mohakhali, Dhaka</p>
                    </div>
                </div>
                <div>
                    <div class="form-field">
                        <p>Permanent Address: </p><p class="auto_bind" data-binding="PermanentAddress">Cox's Bazar</p>
                    </div>
                </div>
                <div>
                    <div class="form-field">
                        <p>Type of Disease: </p><p class="auto_bind" data-binding="TypeOfDisease">Back Pain</p>
                    </div>
                </div>
                <div class="grid grid--2-1">
                    <div class="form-field">
                        <p>Date of Admission: </p><p class="auto_bind" data-binding="AdmissionDate">05.10.2021</p>
                    </div>
                    <div class="form-field">
                        <p>Time of Addmission: </p><p class="auto_bind" data-binding="AdmissionTime">7.40 AM</p>
                    </div>
                </div>
                <div class="grid grid--auto-1fr">
                    <div>
                        <p>Emergency Contact</p>
                    </div>
                    <div>
                        <div class="grid grid--60-40">
                            <div class="form-field">
                                <p>Name: </p><p class="auto_bind" data-binding="EmergencyContactNameOne">Someone Else</p>
                            </div>
                            <div class="form-field">
                                <p>No: </p><p class="auto_bind" data-binding="EmergencyContactNumberOne">0188 8558 686</p>
                            </div>
                        </div>
                        <div class="grid grid--60-40">
                            <div class="form-field">
                                <p>Name: </p><p class="auto_bind" data-binding="EmergencyContactNameTwo"></p>
                            </div>
                            <div class="form-field">
                                <p>No:</p><p class="auto_bind" data-binding="EmergencyContactNumberTwo"></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="grid grid--2x1fr">
                    <div class="form-field">
                        <p>Name of Consultant: </p><p class="auto_bind" data-binding="ConsultantName">Docotr WHO</p>
                    </div>
                    <div class="form-field">
                        <p>Referred By: </p><p class="auto_bind" data-binding="ReferredBy">The Dalal</p>
                    </div>
                </div>
                <div class="grid grid--2-1">
                    <div class="form-field">
                        <p>Discharge Date: </p><p class="auto_bind" data-binding="DischargeDate">12.10.2021</p>
                    </div>
                    <div class="form-field">
                        <p>Time of Discharge: </p><p class="auto_bind" data-binding="DischargeTime">06.30PM</p>
                    </div>
                </div>
            </form>
        </section>
        <section class="signatories grid grid--space-between">
            <div class="signature">
                <p class="blank"></p>
                <p>Authorized Signature</p>
                <p>Dhanmondi Clinic(Pvt) Ltd.</p>
                <div class="form-field">
                    <p>Date: </p><p></p>
                </div>
            </div>
            <div class="signature">
                <p class="blank"></p>
                <p>Patient's Attendance Signature</p>
                <div class="form-field">
                    <p>Date: </p><p></p>
                </div>
            </div>
        </section>
    </div>
</body>
</html>



